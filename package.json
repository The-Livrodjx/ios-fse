{
  "name": "playlist-normalizer-insights",
  "version": "1.0.0",
  "description": "ETL + API for playlist normalization and insights with ClickHouse",
  "main": "src/api/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/api/server.js",
    "ingest": "node src/ingest/ingest.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/unit",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/integration",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:mysql": "docker-compose exec mysql mysql -u playlist_user -pplaylist_pass playlist_db",
    "test:docker": "npm run docker:up && npm run test:integration && npm run docker:down",
    "demo:ingest": "node src/ingest/ingest.js --from fixtures/playlist.basic.json --features fixtures/audio_features.json",
    "demo:full": "npm run docker:up && timeout /t 10 /nobreak && npm run demo:ingest && npm start",
    "setup:docker": "node scripts/setup-env.js docker",
    "setup:local": "node scripts/setup-env.js local",
    "demo": "node scripts/demo.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mysql2": "^3.6.0",
    "winston": "^3.10.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js",
      "!**/tests/**/*-cjs.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "transform": {}
  },
  "keywords": [
    "etl",
    "api",
    "sql",
    "clickhouse",
    "spotify",
    "playlist"
  ],
  "author": "",
  "license": "MIT"
}
